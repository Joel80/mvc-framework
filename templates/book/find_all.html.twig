{% extends 'base.html.twig' %}

{% block title %}My books!{% endblock %}

{% block body %}
<h2>My books</h2>
<div class="book-grid">
    {% for book in books %}
    <div class = "book-container">
        <div class = "book-id">
            <p>Id:</p>
            {{book.id}}
        </div>
        <div class ="book-title">
            <p>Title:</p>
            {{book.title}}
        </div>
        <div class="book-author">
            <p>Author:</p>
            {{book.author}}
        </div>
        <div class="book-image">
            <img class = "book-img" src="{{ asset(book.image) }}" alt="Cover image for {{book.title}} "/> <br>
        </div>
        <div class="book-isbn">
            <p>ISBN:</p>
            {{book.isbn}}
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}

